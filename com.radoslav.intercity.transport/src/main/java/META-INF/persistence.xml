<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="IntercityTransport">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<class>com.intercity.database.entity.Route</class>
		<class>com.intercity.database.entity.Company</class>
		<class>com.intercity.database.entity.Station</class>
		<class>com.intercity.database.entity.User</class>
		<class>com.intercity.database.entity.Vehicle</class>
		<class>com.intercity.database.entity.Seat</class>
		<properties>
	        <property name="eclipselink.logging.level.sql" value="FINE"/>
	    </properties>
	</persistence-unit>
</persistence>
